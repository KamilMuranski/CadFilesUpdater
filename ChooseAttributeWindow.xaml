<Window x:Class="CadFilesUpdater.Windows.ChooseAttributeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:CadFilesUpdater"
        Title="Choose attribute" Height="560" Width="900"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Window.Resources>
        <local:FileNameConverter x:Key="FileNameConverter"/>

        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Pick files (context), then block and attribute:" FontWeight="Bold" Margin="0,0,0,10"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="260"/>
            </Grid.ColumnDefinitions>

            <!-- Files -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,6">
                    <TextBlock Text="Files" FontWeight="Bold" DockPanel.Dock="Left"/>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                        <Button Click="AllFiles_Click" Background="#2563EB" Style="{StaticResource IconButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8FB;" Margin="0,0,6,0"/>
                                <TextBlock Text="All files"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </DockPanel>
                <ListBox x:Name="FilesList" Grid.Row="1" SelectionChanged="FilesList_SelectionChanged" SelectionMode="Single">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding FilePath, Converter={StaticResource FileNameConverter}}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>

            <!-- Blocks -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Blocks" FontWeight="Bold" Margin="0,0,0,6"/>
                <ListBox x:Name="BlocksList" Grid.Row="1" SelectionChanged="BlocksList_SelectionChanged"/>
            </Grid>

            <!-- Attributes -->
            <Grid Grid.Column="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Attributes" FontWeight="Bold" Margin="0,0,0,6"/>
                <ListBox x:Name="AttributesList" Grid.Row="1"/>
            </Grid>
        </Grid>

        <DockPanel Grid.Row="2" Margin="0,12,0,0" LastChildFill="False">
            <Button Click="Ok_Click" Background="#16A34A" Style="{StaticResource IconButtonStyle}" Margin="0,0,10,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE73E;" Margin="0,0,8,0"/>
                    <TextBlock Text="OK"/>
                </StackPanel>
            </Button>
            <Button Click="Cancel_Click" Background="#6B7280" Style="{StaticResource IconButtonStyle}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE711;" Margin="0,0,8,0"/>
                    <TextBlock Text="Cancel"/>
                </StackPanel>
            </Button>
        </DockPanel>
    </Grid>
</Window>

