<Window x:Class="CadFilesUpdater.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:CadFilesUpdater"
        Title="Dynamic Blocks Updater" Height="700" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">
    <Window.Resources>
        <local:FileNameConverter x:Key="FileNameConverter"/>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- File Selection Section -->
        <TextBlock Grid.Row="0" Text="Selected files:" FontWeight="Bold" Margin="0,0,0,5"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Select files..." Click="SelectFiles_Click" Padding="10,5" Margin="0,0,10,0"/>
            <TextBlock x:Name="FilesCountText" Text="No files selected" VerticalAlignment="Center"/>
        </StackPanel>
        <Grid Grid.Row="2" Margin="0,0,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
                <Button Content="Select all" 
                        Click="SelectAllFiles_Click" 
                        Padding="10,5" 
                        Margin="0,0,10,0"
                        FontWeight="Bold"
                        FontSize="14"
                        Background="White"
                        BorderBrush="Black"
                        Foreground="Black"/>
                <Button Content="Unselect all" 
                        Click="UnselectAllFiles_Click" 
                        Padding="10,5"
                        FontWeight="Bold"
                        FontSize="14"
                        Background="White"
                        BorderBrush="Black"
                        Foreground="Black"/>
            </StackPanel>
            <ListBox x:Name="FilesListBox" 
                     Grid.Row="1"
                     SelectionMode="Extended"
                     SelectionChanged="FilesListBox_SelectionChanged"
                     ScrollViewer.HorizontalScrollBarVisibility="Auto"
                     ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Converter={StaticResource FileNameConverter}}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>

        <!-- Block Selection Section -->
        <TextBlock Grid.Row="3" Text="Select block:" FontWeight="Bold" Margin="0,10,0,5"/>
        <Grid Grid.Row="4" Margin="0,0,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="0,0,0,5">
                <TextBox x:Name="BlockSearchBox" 
                         TextChanged="BlockSearchBox_TextChanged"
                         GotFocus="BlockSearchBox_GotFocus"
                         LostFocus="BlockSearchBox_LostFocus"
                         Padding="5"
                         FontSize="14"/>
                <TextBlock x:Name="BlockSearchPlaceholder" 
                           Text="Search here..."
                           Foreground="Gray"
                           IsHitTestVisible="False"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Margin="10,0,0,0"
                           FontSize="14"
                           Visibility="Visible"/>
            </Grid>
            <ListBox x:Name="BlocksListBox" Grid.Row="1" 
                     SelectionChanged="BlocksListBox_SelectionChanged"
                     PreviewMouseLeftButtonDown="BlocksListBox_PreviewMouseLeftButtonDown"
                     ScrollViewer.HorizontalScrollBarVisibility="Auto"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     SelectionMode="Single"/>
        </Grid>

        <!-- Attribute Selection Section -->
        <TextBlock Grid.Row="5" Text="Select attribute:" FontWeight="Bold" Margin="0,0,0,5"/>
        <Grid Grid.Row="6" Margin="0,0,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="0,0,0,5">
                <TextBox x:Name="AttributeSearchBox" 
                         TextChanged="AttributeSearchBox_TextChanged"
                         GotFocus="AttributeSearchBox_GotFocus"
                         LostFocus="AttributeSearchBox_LostFocus"
                         Padding="5"
                         FontSize="14" IsEnabled="False"/>
                <TextBlock x:Name="AttributeSearchPlaceholder" 
                           Text="Search here..."
                           Foreground="Gray"
                           IsHitTestVisible="False"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Margin="10,0,0,0"
                           FontSize="14"
                           Visibility="Visible"/>
            </Grid>
            <ListBox x:Name="AttributesListBox" Grid.Row="1" 
                     SelectionChanged="AttributesListBox_SelectionChanged"
                     MaxHeight="150"
                     ScrollViewer.HorizontalScrollBarVisibility="Auto"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     SelectionMode="Single"
                     IsEnabled="False"/>
        </Grid>

        <!-- Value Input Section -->
        <Grid Grid.Row="7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Value:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Bold"/>
            <TextBox x:Name="ValueTextBox" Grid.Column="1" 
                     Padding="5" FontSize="14" Margin="0,0,10,0"
                     TextChanged="ValueTextBox_TextChanged"
                     IsEnabled="False"/>
            <Button x:Name="SubmitButton" Grid.Column="2" 
                    Content="Submit" 
                    Click="SubmitButton_Click"
                    Padding="20,5" FontSize="14" FontWeight="Bold"
                    IsEnabled="False"/>
        </Grid>
    </Grid>
</Window>
