<Window x:Class="CadFilesUpdater.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:CadFilesUpdater"
        Title="CadFilesUpdater" Height="750" Width="1200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">
    <Window.Resources>
        <local:FileNameConverter x:Key="FileNameConverter"/>

        <!-- Simple "icon + text" button look -->
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="Margin" Value="0,0,8,8"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SmallIconButtonStyle" TargetType="Button" BasedOn="{StaticResource IconButtonStyle}">
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="MinWidth" Value="100"/>
        </Style>

        <!-- Bottom-right action buttons (bigger than the rest) -->
        <Style x:Key="BottomActionButtonStyle" TargetType="Button" BasedOn="{StaticResource IconButtonStyle}">
            <Setter Property="Padding" Value="18,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Width" Value="220"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <Style x:Key="ListViewItemClickableStyle" TargetType="ListViewItem">
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#11000000"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT PANEL -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Files -->
            <StackPanel Grid.Row="0" Orientation="Vertical">
                <TextBlock Text="Files" FontWeight="Bold" Margin="0,0,0,6"/>
                <Grid Margin="0,0,0,4">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Row="0" Grid.Column="0" Click="AddFiles_Click" Background="#16A34A" Style="{StaticResource IconButtonStyle}" Margin="0,0,8,8">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE710;" Margin="0,0,8,0"/>
                            <TextBlock Text="Add"/>
                        </StackPanel>
                    </Button>
                    <Button Grid.Row="0" Grid.Column="1" Click="RemoveFiles_Click" Background="#DC2626" Style="{StaticResource IconButtonStyle}" Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE74D;" Margin="0,0,8,0"/>
                            <TextBlock Text="Remove"/>
                        </StackPanel>
                    </Button>
                    <!-- Row 1: Reload + one free slot (we may add another button later) -->
                    <Button Grid.Row="1" Grid.Column="0" Click="ReloadFiles_Click" Background="#0EA5E9" Style="{StaticResource IconButtonStyle}" Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE72C;" Margin="0,0,8,0"/>
                            <TextBlock Text="Reload"/>
                        </StackPanel>
                    </Button>
                    <!-- Row 2: Select/Unselect -->
                    <Button Grid.Row="2" Grid.Column="0" Click="SelectAllFiles_Click" Background="#2563EB" Style="{StaticResource IconButtonStyle}" Margin="0,8,8,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8FB;" Margin="0,0,8,0"/>
                            <TextBlock Text="Select All"/>
                        </StackPanel>
                    </Button>
                    <Button Grid.Row="2" Grid.Column="1" Click="UnselectAllFiles_Click" Background="#6B7280" Style="{StaticResource IconButtonStyle}" Margin="0,8,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE711;" Margin="0,0,8,0"/>
                            <TextBlock Text="Unselect All"/>
                        </StackPanel>
                    </Button>
                </Grid>
                <TextBlock x:Name="FilesSummaryText" Text="0 file(s) loaded" Margin="0,0,0,0" Foreground="Gray"/>
            </StackPanel>

            <ListView x:Name="FilesListView" Grid.Row="1" Margin="0,8,0,0"
                      SelectionMode="Extended"
                      ItemContainerStyle="{StaticResource ListViewItemClickableStyle}"
                      PreviewMouseLeftButtonDown="FilesListView_PreviewMouseLeftButtonDown">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <DockPanel LastChildFill="True">
                            <CheckBox IsChecked="{Binding IsSelected}" VerticalAlignment="Center" Margin="0,0,8,0"
                                      Checked="FilesSelectionChanged" Unchecked="FilesSelectionChanged"/>
                            <TextBlock Text="{Binding FilePath, Converter={StaticResource FileNameConverter}}" VerticalAlignment="Center"/>
                        </DockPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Blocks -->
            <StackPanel Grid.Row="3" Orientation="Vertical">
                <TextBlock Text="Blocks (for selected files)" FontWeight="Bold" Margin="0,0,0,6"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                    <Button Click="SelectAllBlocks_Click" Background="#2563EB" Style="{StaticResource SmallIconButtonStyle}" Margin="0,0,6,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8FB;" Margin="0,0,6,0"/>
                            <TextBlock Text="Select All"/>
                        </StackPanel>
                    </Button>
                    <Button Click="UnselectAllBlocks_Click" Background="#6B7280" Style="{StaticResource SmallIconButtonStyle}" Margin="0,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE711;" Margin="0,0,6,0"/>
                            <TextBlock Text="Unselect All"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>

            <ListView x:Name="BlocksListView" Grid.Row="4" Margin="0,8,0,0" SelectionMode="Extended"
                      ItemContainerStyle="{StaticResource ListViewItemClickableStyle}"
                      PreviewMouseLeftButtonDown="BlocksListView_PreviewMouseLeftButtonDown">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <DockPanel LastChildFill="True">
                            <CheckBox IsChecked="{Binding IsSelected}" VerticalAlignment="Center" Margin="0,0,8,0"
                                      Checked="BlocksSelectionChanged" Unchecked="BlocksSelectionChanged"/>
                            <TextBlock Text="{Binding BlockName}" VerticalAlignment="Center"/>
                        </DockPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <!-- RIGHT PANEL -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <DataGrid x:Name="AttributesDataGrid"
                      Grid.Row="0"
                      AutoGenerateColumns="True"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      IsReadOnly="False"
                      BeginningEdit="AttributesDataGrid_BeginningEdit"
                      CellEditEnding="AttributesDataGrid_CellEditEnding"
                      LoadingRow="AttributesDataGrid_LoadingRow"
                      AutoGeneratingColumn="AttributesDataGrid_AutoGeneratingColumn"
                      ScrollViewer.ScrollChanged="AttributesDataGrid_ScrollChanged"
                      HeadersVisibility="All"
                      GridLinesVisibility="All"
                      AlternatingRowBackground="#FFF7F7F7"
                      RowBackground="White"
                      >
                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Style.Triggers>
                            <!-- N/A cells: yellow + disabled -->
                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Content.Text}" Value="N/A">
                                <Setter Property="Background" Value="#FEF9C3"/>
                                <Setter Property="Foreground" Value="Gray"/>
                                <Setter Property="FontStyle" Value="Italic"/>
                                <Setter Property="IsEnabled" Value="False"/>
                                <Setter Property="ToolTip" Value="Attribute not present in this block"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.CellStyle>
            </DataGrid>

            <DockPanel Grid.Row="1" Margin="0,10,0,0" LastChildFill="False">
                <Button Click="ApplySimilar_Click"
                        Background="#2563EB"
                        Style="{StaticResource BottomActionButtonStyle}"
                        Margin="0,0,10,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8B5;" Margin="0,0,8,0"/>
                        <TextBlock Text="Apply to all attributes"/>
                    </StackPanel>
                </Button>
                <Button Click="SaveChanges_Click"
                        Background="#7C3AED"
                        Style="{StaticResource BottomActionButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE74E;" Margin="0,0,8,0"/>
                        <TextBlock Text="Save changes"/>
                    </StackPanel>
                </Button>
                <TextBlock x:Name="GridSummaryText" DockPanel.Dock="Right" Foreground="Gray" VerticalAlignment="Center" Margin="10,0,0,0"/>
            </DockPanel>
        </Grid>

        <!-- Busy overlay (covers whole window) -->
        <Grid x:Name="BusyOverlay"
              Grid.Column="0"
              Grid.ColumnSpan="3"
              Background="#66000000"
              Visibility="Collapsed"
              Panel.ZIndex="1000">
            <Border Background="White" CornerRadius="8" Padding="16"
                    HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="360">
                <StackPanel>
                    <TextBlock x:Name="BusyText" Text="Working..." FontWeight="Bold" Margin="0,0,0,10"/>
                    <ProgressBar x:Name="BusyProgress" IsIndeterminate="True" Height="18"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
