<Window x:Class="CadFilesUpdater.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:CadFilesUpdater"
        Title="CadFilesUpdater" Height="750" Width="1200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">
    <Window.Resources>
        <local:FileNameConverter x:Key="FileNameConverter"/>

        <!-- Simple "icon + text" button look - white background with colored icons -->
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="Margin" Value="0,0,8,8"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4" Padding="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F5F5"/>
                    <Setter Property="BorderBrush" Value="#0078D4"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SmallIconButtonStyle" TargetType="Button" BasedOn="{StaticResource IconButtonStyle}">
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="MinWidth" Value="100"/>
        </Style>

        <Style x:Key="SplitButtonPartStyle" TargetType="Button" BasedOn="{StaticResource IconButtonStyle}">
            <Setter Property="Margin" Value="0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="MinWidth" Value="0"/>
            <Setter Property="Padding" Value="10,6"/>
        </Style>

        <!-- Bottom-right action buttons (bigger than the rest) -->
        <Style x:Key="BottomActionButtonStyle" TargetType="Button" BasedOn="{StaticResource IconButtonStyle}">
            <Setter Property="Padding" Value="18,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Width" Value="220"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>

        <Style x:Key="ListViewItemClickableStyle" TargetType="ListViewItem">
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#11000000"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="380" MinWidth="360" MaxWidth="900"/>
            <ColumnDefinition Width="6"/>
            <ColumnDefinition Width="*" MinWidth="400"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT PANEL -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Files -->
            <StackPanel Grid.Row="0" Orientation="Vertical">
                <TextBlock Text="Files" FontWeight="Bold" Margin="0,0,0,6"/>
                <Grid Margin="0,0,0,4">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Row="0" Grid.Column="0"
                            Width="165"
                            HorizontalAlignment="Left"
                            Margin="0,0,10,8"
                            Background="White"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="4">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="1"/>
                                <ColumnDefinition Width="36"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" Click="AddFiles_Click" Style="{StaticResource SplitButtonPartStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE710;" Margin="0,0,8,0" Foreground="#16A34A"/>
                                    <TextBlock Text="Add"/>
                                </StackPanel>
                            </Button>
                            <Border Grid.Column="1" Background="#E0E0E0"/>
                            <Button x:Name="AddOptionsButton"
                                    Grid.Column="2"
                                    Click="AddOptions_Click"
                                    Style="{StaticResource SplitButtonPartStyle}">
                                <TextBlock Text="+" FontWeight="Bold" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <Button.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Add drawings" Click="AddDrawingsMenu_Click"/>
                                        <MenuItem Header="Add folders" Click="AddFolders_Click"/>
                                        <MenuItem Header="Open all opened drawings" Click="AddOpenedDrawings_Click"/>
                                    </ContextMenu>
                                </Button.ContextMenu>
                            </Button>
                        </Grid>
                    </Border>
                    <Button Grid.Row="0" Grid.Column="1"
                            Width="165"
                            HorizontalAlignment="Left"
                            Click="RemoveFiles_Click"
                            Style="{StaticResource IconButtonStyle}"
                            Margin="10,0,0,8">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE74D;" Margin="0,0,8,0" Foreground="#DC2626"/>
                            <TextBlock Text="Remove selected"/>
                        </StackPanel>
                    </Button>

                    <!-- Row 1: Reload + one free slot (we may add another button later) -->
                    <Button Grid.Column="0"
                            Width="165"
                            HorizontalAlignment="Left"
                            Click="ReloadFiles_Click"
                            Style="{StaticResource IconButtonStyle}"
                            Margin="0,29,10,29"
                            Grid.RowSpan="3">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE72C;" Margin="0,0,8,0" Foreground="#16A34A"/>
                            <TextBlock Text="Reload"/>
                        </StackPanel>
                    </Button>

                    <!-- Row 2: All files -->
                    <Button Grid.Row="2" Grid.Column="0"
                            Width="165"
                            HorizontalAlignment="Left"
                            Click="AllFiles_Click"
                            Style="{StaticResource IconButtonStyle}"
                            Margin="0,28,10,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8FB;" Margin="0,0,8,0" Foreground="#2563EB"/>
                            <TextBlock Text="All files"/>
                        </StackPanel>
                    </Button>
                </Grid>

                <TextBlock x:Name="FilesSummaryText" Text="0 file(s) loaded" Margin="0,0,0,0" Foreground="Gray"/>
            </StackPanel>

            <DataGrid x:Name="FilesListView"
                      Grid.Row="1"
                      Margin="0,8,0,0"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      CanUserResizeColumns="True"
                      SelectionMode="Extended"
                      HeadersVisibility="Column"
                      RowHeaderWidth="0"
                      SelectionChanged="FilesListView_SelectionChanged">
                <DataGrid.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Remove" Click="RemoveFiles_Click"/>
                        <MenuItem Header="Open file in AutoCAD" Click="FilesContext_OpenInAutoCAD_Click"/>
                    </ContextMenu>
                </DataGrid.ContextMenu>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Drawing" Binding="{Binding FilePath, Converter={StaticResource FileNameConverter}}" Width="140"/>
                    <DataGridTextColumn Header="Blocks w/ attrs" Binding="{Binding BlocksWithAttributes}" Width="SizeToHeader"/>
                    <DataGridTextColumn Header="Path" Binding="{Binding FilePath}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Blocks -->
            <StackPanel Grid.Row="3" Orientation="Vertical">
                <TextBlock Text="Blocks (for selected files)" FontWeight="Bold" Margin="0,0,0,6"/>

                <Grid Margin="0,0,0,6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="6"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            Click="AllBlocks_Click"
                            Style="{StaticResource IconButtonStyle}"
                            Width="165"
                            Margin="0,0,10,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8FB;" Margin="0,0,8,0" Foreground="#2563EB"/>
                            <TextBlock Text="All blocks"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </StackPanel>

            <ListView x:Name="BlocksListView" Grid.Row="4" Margin="0,8,0,0" SelectionMode="Extended"
                      SelectionChanged="BlocksListView_SelectionChanged"
                      ItemContainerStyle="{StaticResource ListViewItemClickableStyle}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding BlockName}" VerticalAlignment="Center"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <!-- Splitter -->
        <GridSplitter Grid.Column="1"
                      Width="6"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      Background="#E5E7EB"
                      ResizeBehavior="PreviousAndNext"/>

        <!-- RIGHT PANEL -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <DataGrid x:Name="AttributesDataGrid"
                      Grid.Row="0"
                      AutoGenerateColumns="True"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      IsReadOnly="False"
                      BeginningEdit="AttributesDataGrid_BeginningEdit"
                      CellEditEnding="AttributesDataGrid_CellEditEnding"
                      LoadingRow="AttributesDataGrid_LoadingRow"
                      AutoGeneratingColumn="AttributesDataGrid_AutoGeneratingColumn"
                      ScrollViewer.ScrollChanged="AttributesDataGrid_ScrollChanged"
                      HeadersVisibility="All"
                      GridLinesVisibility="All"
                      AlternatingRowBackground="#FFF7F7F7"
                      RowBackground="White"
                      ContextMenuOpening="AttributesDataGrid_ContextMenuOpening"
                      SelectionMode="Extended"
                      SelectionUnit="Cell">
                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="4,2"/>
                        <Style.Triggers>
                            <!-- Focused cell: blue border -->
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#0078D4"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <!-- Keyboard focus within cell -->
                            <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                <Setter Property="BorderBrush" Value="#0078D4"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <!-- N/A cells: yellow + disabled -->
                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Content.Text}" Value="N/A">
                                <Setter Property="Background" Value="#FEF9C3"/>
                                <Setter Property="Foreground" Value="Gray"/>
                                <Setter Property="FontStyle" Value="Italic"/>
                                <Setter Property="IsEnabled" Value="False"/>
                                <Setter Property="ToolTip" Value="Attribute not present in this block"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.CellStyle>
                <DataGrid.ContextMenu>
                    <ContextMenu x:Name="AttributesContextMenu" Opened="AttributesDataGrid_ContextMenuOpening">
                        <MenuItem x:Name="ContextMenu_RestoreCell" Header="Restore original value in this cell" Click="ContextMenu_RevertAttribute_Click"/>
                        <MenuItem Header="Revert all changes for this block" Click="ContextMenu_RevertBlock_Click"/>
                        <MenuItem Header="Revert all changes for this file" Click="ContextMenu_RevertFile_Click"/>
                        <Separator/>
                        <MenuItem x:Name="ContextMenu_ApplySimilar" Header="Apply this value to all similar attributes" Click="ContextMenu_ApplySimilar_Click"/>
                        <Separator/>
                        <MenuItem x:Name="ContextMenu_Copy" Header="Copy" Click="ContextMenu_CopyCell_Click"/>
                        <MenuItem x:Name="ContextMenu_Paste" Header="Paste" Click="ContextMenu_PasteCell_Click"/>
                        <MenuItem x:Name="ContextMenu_Delete" Header="Delete cell's content" Click="ContextMenu_DeleteCell_Click"/>
                        <Separator/>
                        <MenuItem Header="Open file in AutoCAD" Click="ContextMenu_OpenInAutoCAD_Click"/>
                    </ContextMenu>
                </DataGrid.ContextMenu>
            </DataGrid>

            <DockPanel Grid.Row="1" Margin="0,10,0,0" LastChildFill="False">
                <Button Click="ApplySimilar_Click"
                        Style="{StaticResource BottomActionButtonStyle}"
                        Margin="0,0,10,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8B5;" Margin="0,0,8,0" Foreground="#F97316"/>
                        <TextBlock Text="Apply to all attributes"/>
                    </StackPanel>
                </Button>

                <Button Click="SaveChanges_Click"
                        Style="{StaticResource BottomActionButtonStyle}"
                        Margin="0,0,10,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE74E;" Margin="0,0,8,0" Foreground="#C026D3"/>
                        <TextBlock Text="Save changes"/>
                    </StackPanel>
                </Button>

                <Button x:Name="UndoButton" Click="Undo_Click"
                        Style="{StaticResource BottomActionButtonStyle}"
                        Width="110"
                        Margin="0,0,10,0"
                        IsEnabled="False">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE7A7;" Margin="0,0,8,0" Foreground="#92400E"/>
                        <TextBlock Text="Undo"/>
                    </StackPanel>
                </Button>

                <Button x:Name="RedoButton" Click="Redo_Click"
                        Style="{StaticResource BottomActionButtonStyle}"
                        Width="110"
                        Margin="0,0,10,0"
                        IsEnabled="False">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE7A6;" Margin="0,0,8,0" Foreground="#92400E"/>
                        <TextBlock Text="Redo"/>
                    </StackPanel>
                </Button>

                <TextBlock x:Name="GridSummaryText" DockPanel.Dock="Right" Foreground="Gray" VerticalAlignment="Center" Margin="10,0,0,0"/>
            </DockPanel>

            <DockPanel Grid.Row="2" Margin="0,10,0,0" LastChildFill="False">
                <Button Click="ExportAllToExcel_Click"
                        Style="{StaticResource BottomActionButtonStyle}"
                        Margin="0,0,10,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8C5;" Margin="0,0,8,0" Foreground="#107C10"/>
                        <TextBlock Text="Export all blocks to Excel"/>
                    </StackPanel>
                </Button>

                <Button Click="ExportSelectedToExcel_Click"
                        Style="{StaticResource BottomActionButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8C5;" Margin="0,0,8,0" Foreground="#107C10"/>
                        <TextBlock Text="Export selected to Excel"/>
                    </StackPanel>
                </Button>
            </DockPanel>
        </Grid>

        <!-- Busy overlay (covers whole window) -->
        <Grid x:Name="BusyOverlay"
              Grid.Column="0"
              Grid.ColumnSpan="3"
              Background="#66000000"
              Visibility="Collapsed"
              Panel.ZIndex="1000">
            <Border Background="White" CornerRadius="8" Padding="16"
                    HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="360">
                <StackPanel>
                    <TextBlock x:Name="BusyText" Text="Working..." FontWeight="Bold" Margin="0,0,0,10"/>
                    <ProgressBar x:Name="BusyProgress" IsIndeterminate="True" Height="18"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
